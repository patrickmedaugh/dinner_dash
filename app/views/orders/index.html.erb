<h1>My Past Orders </h1>
<% current_user.orders.each do |order|%>
Order # <%= order.id %> <%= order.created_at %><br />
<%= order.status %> at <%= order.updated_at %><br />
<% order.items.each do |item|  %>
<br />
 <%= link_to "#{item.title}", item_path(item) %><br>
 Price: <%= number_to_currency(item.dec_price) %><br>
 Quantity: <%= order.purchases.find_by(item_id: item.id).quantity %><br>
<br>
<% end %>
 Total: <%= number_to_currency(order.total/100) if order.total %><br /><br />
<% end %>
